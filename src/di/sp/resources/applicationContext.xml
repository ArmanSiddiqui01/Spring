<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="di.sp.beans.Address" id="std1">
        <property name="houseNo" value="13"/>
        <property name="city" value="mumbai"/>
        <property name="pinCode" value="421005"/>

    </bean>
    <bean class="di.sp.beans.Topper" id="std">
        <property name="name" value="deepak"/>
        <property name="roll" value="12"/>
        <property name="address" ref="std1"/>
    </bean>
</beans>